<div class="lesson-banner" style="background-color: #00A469;">
</div>

<div class="lesson-container">
<h1 class="d-flex justify-content-center align-items-center">Lessons</h1>
  <% @lessons.each do |lesson| %>

    <div class="card-product">
  <!-- use - USER.AVATAR for user profile image to be dynamic -->
      <div class="d-flex align-items-center justify-content-start">
        <img src="https://media.licdn.com/dms/image/C4D03AQG3mVhghooy4Q/profile-displayphoto-shrink_800_800/0?e=1579737600&v=beta&t=FLfJTON6XeSWySuhNByK74tMa7BLSUY-ylYEXNiiRvQ" />
        <div class="card-product-infos">
          <p style="font-size:25px"><%= lesson.speciality %></p>
          <p style="font-weight: bold"><%= lesson.description %></p>
          <p style="font-weight: bold">Price : Â£<%= lesson.price %></p>
        </div>
      </div>
      <div class="buttons">
        <%= link_to "View Details", lesson_path(lesson), class: 'whitetext' %>
      </div>
    </div>
  <% end %>
</div>
