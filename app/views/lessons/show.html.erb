<div class="container">
  <div class="lesson-card-container">
    <h2>Your lessons:</h2>

      <div class="card">
        <div class="d-flex align-items-center justify-content-around">
          <div class="lessonCard p-4">
            <div class="lesson-name">
              <h2><%= @lesson.speciality %></h2>
            </div>

            <div class="description-tag">
              <p><%= @lesson.description %></p>
            </div>

            <div class="price-tag">
              <h6>Price</h6>
              <%= @lesson.price %><p>Â£/per hour</p>
            </div>
          </div>
          <div class="d-flex w-100 align-items-center justify-content-center flex-column p-4">
            <%= link_to "Book Now", new_lesson_booking_path(@lesson), class: 'book-button' %>
            <% if @lesson.user == current_user %><br>
              <%= link_to "Edit lesson", edit_lesson_path(@lesson), class: 'edit-button' %><br>
              <%= link_to "Delete lesson", lesson_path(@lesson), class: 'delete-button', method: :delete %>
            <% end %>
          </div>
        </div>
    </div>
    <%= link_to "Back to Lessons", lessons_path %>
  </div>
</div>
