<div class="searchBox">
<h2>Search Liife lessons!</h2>
  <%= form_tag lessons_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search lessons"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
